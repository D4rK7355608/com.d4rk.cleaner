<resources>

    <style name="AppTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="material_dialog_background">?attr/colorSurface</item>
        <item name="material_dialog_title_text_color">?android:textColorPrimary</item>
        <item name="material_dialog_message_text_color">?android:textColorPrimary</item>
        <item name="material_dialog_positive_button_color">?attr/colorPrimary</item>
        <item name="material_dialog_positive_button_text_color">?android:textColorPrimaryInverse
        </item>
        <item name="material_dialog_negative_button_text_color">?attr/colorPrimary</item>
        <item name="actionBarStyle">@style/actionBarStyle</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="dialogCornerRadius">@dimen/extra_large_rounding</item>
        <item name="popupMenuBackground">@drawable/bg_popup</item>
        <item name="android:alertDialogTheme">
            @style/ThemeOverlay.Material3.MaterialAlertDialog.Centered
        </item>
        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.Material3.MaterialAlertDialog.Centered
        </item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered
        </item>
        <item name="panelMenuListTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered
        </item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="android:colorPrimaryDark">?attr/colorSurface</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="actionBarStyle" parent="@style/Widget.Material3.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/font_poppins</item>
    </style>
</resources>